<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Shortcut for useful apps">

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Application to browse your files, including root files"
            app:componentName="com.speedsoftware.rootexplorer/com.speedsoftware.rootexplorer.RootExplorer"/>

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Control samsung's toolbox, turn it on or off, choose available apps and rearrange them"
            app:componentName="com.wubydax.toolboxsettings/com.wubydax.toolboxsettings.ToolboxSettings"/>

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:icon="@mipmap/ic_launcher"
            android:summary="Choose what app or shortcut to open when TW launcher is being swiped to the magazine page"
            android:title="Shortcut to GearTWSwipe"
            app:componentName="com.wubydax.geartwswipe/com.wubydax.geartwswipe.ResetDialogActivity"/>

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Manage root permissions for apps and services"
            android:title="Chainfire's SuperSu App"
            app:componentName="eu.chainfire.supersu/eu.chainfire.supersu.MainActivity-Material"/>

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Manage root permissions for apps and services"
            android:title="Phh's Superuser"
            app:componentName="me.phh.superuser/com.koushikdutta.superuser.ActivitySplash"/>

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Check your current magisk configuration"
            android:title="Magisk Manager"
            app:componentName="com.topjohnwu.magisk/com.topjohnwu.magisk.MainActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Manage AdBlocker Preferences"
            android:title="AdAway"
            app:componentName="org.adaway/org.adaway.ui.BaseActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Change Kernel settings"
            android:title="Synapse"
            app:componentName="com.af.synapse/com.af.synapse.MainActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Change Kernel settings"
            android:title="Kernel Adiutor"
            app:componentName="com.grarak.kerneladiutor/com.grarak.kerneladiutor.activities.StartActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Check if there's an update for your rom"
            android:title="OTA Updater"
            app:componentName="com.otaupdater/com.otaupdater.OTAUpdaterActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Shows phone infos"
            android:title="Phone Info"
            app:componentName="org.vndnguyen.phoneinfo/org.vndnguyen.phoneinfo.main" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Dolby Audio Settings"
            android:title="Dolby Atmos"
            app:componentName="com.atmos.daxappUI/com.atmos.daxappUI.MainActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Viper Audio Settings"
            android:title="Viper4Android"
            app:componentName="com.vipercn.viper4android_v2/com.vipercn.viper4android_v2.activity.ViPER4Android" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Viper Audio Settings"
            android:title="Viper4Android FX"
            app:componentName="com.audlabs.viperfx/com.audlabs.viperfx.main.MainActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Backup/Restore your app and data"
            android:title="Titanium Backup"
            app:componentName="com.keramidas.TitaniumBackup/.MainActivity" />

        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference
            android:summary="Check and install busybox to your phone"
            android:title="Busybox"
            app:componentName="com.jrummy.busybox.installer/com.jrummy.busybox.installer.MainActivity" />

    </PreferenceCategory>

</PreferenceScreen>
