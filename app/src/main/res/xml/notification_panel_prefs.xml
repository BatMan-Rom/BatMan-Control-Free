<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceScreen
            android:summary="Change general settings related to the Pulldown Menu"
            android:title="Pulldown Menu settings">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="show_multi_user"
            android:summaryOff="Avatar hidden"
            android:summaryOn="Avatar shown"
            android:title="Multi-user Avatar"
            app:isSilent="false"
            app:packageNameToKill="com.android.systemui"/>
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="qs_pulldown"
            android:summaryOff="Feature is disabled"
            android:summaryOn="Feature is enabled"
            android:title="Single swipe for Quickpanel on right side" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="true"
            android:key="charging_notif"
            android:summaryOff="Notification is disabled"
            android:summaryOn="Notification is shown"
            android:title="Ongoing Charging Pulldown Notification"
            app:isSilent="false"
            app:packageNameToKill="com.android.systemui"/>
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="ongoing_notifications"
            android:summaryOff="Ongoing Notifications are permanent"
            android:summaryOn="Ongoing Notifications are removable"
            android:title="Make Ongoing Notifications Removable" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="true"
            android:key="heads_up_notifications_enabled"
            android:summaryOff="Heads up disabled"
            android:summaryOn="Heads up enabled"
            android:title="Heads Up Notifications" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="double_tap_sleep"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled"
            android:title="Double tab to sleep on statusbar" />
    </PreferenceScreen>

    <PreferenceScreen
        android:summary="Change colors from pulldown menu"
        android:title="Notification Panel Colors">
        <PreferenceCategory
            android:title="Header Colors">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="false"
                android:key="unlock_header_colors"
                android:summaryOff="Colors are locked to stock"
                android:summaryOn="Colors are unlocked for changes"
                android:title="Allow colors to be changed"
                app:isSilent="false"
                app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#fffafafa"
                android:dependency="unlock_header_colors"
                android:key="header_background_color"
                android:title="Header background color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#ff252525"
                android:dependency="unlock_header_colors"
                android:key="header_text_color"
                android:title="Header text color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#b3252525"
                android:dependency="unlock_header_colors"
                android:key="header_icon_color"
                android:title="Header icon colors" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="Quicksettings Colors">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="false"
                android:key="unlock_qs_colors"
                android:summaryOff="Colors are locked to stock"
                android:summaryOn="Colors are unlocked for changes"
                android:title="Allow colors to be changed"
                app:isSilent="false"
                app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#fffafafa"
                android:dependency="unlock_qs_colors"
                android:key="qs_background_color"
                android:title="Quicksettings background color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#ff252525"
                android:dependency="unlock_qs_colors"
                android:key="qs_text_color"
                android:title="Quicksettings text color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#ff22c4ff"
                android:dependency="unlock_qs_colors"
                android:key="qs_icon_on_color"
                android:title="Quicksettings icon on color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#4d252525"
                android:dependency="unlock_qs_colors"
                android:key="qs_icon_off_color"
                android:title="Quicksettings icon off color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#33252525"
                android:dependency="unlock_qs_colors"
                android:key="qs_divider_color"
                android:title="Quicksettinsg divider color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#ff56c0e5"
                android:dependency="unlock_qs_colors"
                android:key="qs_slider_color"
                android:title="Quicksettings Brightness slider color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#fffafafa"
                android:dependency="unlock_qs_colors"
                android:key="qs_drag_handle_background_color"
                android:title="Quicksettings drag handle background color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#cc252525"
                android:dependency="unlock_qs_colors"
                android:key="qs_drag_handle_icon_color"
                android:title="Quicksettings drag handle icon color" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#fffafafa"
                android:dependency="unlock_qs_colors"
                android:key="quickconnect_background_color"
                android:title="Quick connect background color" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="Notification Colors">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="false"
                android:key="unlock_notification_colors"
                android:summaryOff="Colors are locked to stock"
                android:summaryOn="Colors are unlocked for changes"
                android:title="Allow colors to be changed"
                app:isSilent="false"
                app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#fffafafa"
                android:dependency="unlock_notification_colors"
                android:key="notification_background_color"
                android:title="Notification panel background color" />
            <!--/*
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#ff212122"
                android:dependency="unlock_notification_colors"
                android:key="notification_text_color"
                android:title="Notification text color" /> */-->
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:summary="Change the pulldown background of the notification panel"
        android:title="Notification panel background">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="enable_gear_custom_bg"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled"
            android:title="Enable custom background"/>
        <PreferenceCategory
            android:dependency="enable_gear_custom_bg"
            android:title="General bg preferences">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/custom_bg_type_entries"
                android:entryValues="@array/custom_bg_type_values"
                android:key="gear_custom_bg_type"
                android:title="Background type"
                app:dependentValue="0"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                android:defaultValue="255"
                android:key="gear_bg_opacity"
                android:title="Background opacity"
                app:maxValue="255"
                app:minValue="0"/>
        </PreferenceCategory>
        <PreferenceCategory
            android:dependency="enable_gear_custom_bg"
            android:title="Custom image preferences">
            <com.wubydax.romcontrol.v2.prefs.UriSelectionPreference
                android:key="gear_bg_image_uri"
                android:title="Select Bg image"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/crop_entries"
                android:entryValues="@array/crop_values"
                android:key="gear_bg_crop_type"
                android:title="Set Image Scaling Type"/>
        </PreferenceCategory>
        <PreferenceCategory
            android:dependency="enable_gear_custom_bg"
            android:title="Color and gradient preferences">
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#00000000"
                android:dependency="gear_custom_bg_type"
                android:key="gear_bg_primary_color"
                android:title="Select primary color"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#00000000"
                android:dependency="gear_custom_bg_type"
                android:key="gear_second_gradient_color"
                android:title="Secondary Color (for gradient)"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:defaultValue="0"
                android:dependency="gear_custom_bg_type"
                android:entries="@array/gradient_entries"
                android:entryValues="@array/gradient_values"
                android:key="gear_bg_gradient_orientation"
                android:title="Gradient orientation"/>
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceCategory
        android:title="Device info settings">
        <PreferenceScreen
            android:title="Device info customization">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="false"
                android:key="device_info_visibility"
                android:summaryOff="Disabled"
                android:summaryOn="Enabled"
                android:title="Enable device info view"/>
            <PreferenceCategory
                android:dependency="device_info_visibility"
                android:title="Text colors">
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#ffffffff"
                    android:key="gear_info_names_color"
                    android:title="Info names text color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#ffffffff"
                    android:key="gear_info_values_color"
                    android:title="Info values text color"/>
            </PreferenceCategory>
            <PreferenceCategory
                android:dependency="device_info_visibility"
                android:title="Device Info Items">
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_model"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Device model"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_android_version"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Android version"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_build_version"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Build version"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_battery_level"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Battery level"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_network_name"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Network name"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_wifi_info"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="WIFI info"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_next_alarm"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Next alarm"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_up_time"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Device up time"/>
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Reboot visibility on top left corner">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="false"
            android:key="gear_reboot_view_visibility"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled"
            android:title="Reboot view visibility"/>
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
            android:defaultValue="#00000000"
            android:key="gear_reboot_view_color"
            android:title="Reboot view color"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Carrier label text preferences">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="true"
            android:key="carrier_label_visibility"
            android:summaryOff="Hidden"
            android:summaryOn="Shown"
            android:title="Carrier label visibility"/>
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
            android:defaultValue="#ffffff"
            android:dependency="carrier_label_visibility"
            android:key="carrier_label_text_color"
            android:title="Carrier label text color"/>
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
            android:defaultValue="0"
            android:dependency="carrier_label_visibility"
            android:entries="@array/carrier_entries"
            android:entryValues="@array/carrier_entry_values"
            android:key="is_custom_carrier_label"
            android:title="Carrier label text"
            app:dependentValue="0"/>
        <com.wubydax.romcontrol.v2.prefs.MyEditTextPreference
            android:defaultValue="Custom Text"
            android:dependency="is_custom_carrier_label"
            android:key="custom_carrier_label"
            android:title="Custom text for carrier label"/>
    </PreferenceCategory>

</PreferenceScreen>
